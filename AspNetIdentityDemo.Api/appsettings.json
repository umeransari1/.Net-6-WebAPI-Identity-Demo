{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnectionString": "Server=.\\SQLEXPRESS;Database=AuthDemoDb;Integrated Security=true;"
  },
  "IdentitySettings": {
    "RequireDigit": true,
    "RequireLowercase": true,
    "RequiredLength": 8
  },
  "AuthSettings": {
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "RequireExpirationTime": true,
    "ValidateIssuerSigningKey": true,
    "IssuerSigningKey": "This is the key we will use in the Encryption",
    "ValidIssuer": "http://test.net",
    "ValidAudience": "http://test.net"
  },
  "SendGrid": {
    "APIKey": "[SEND_GRID_API_KEY]",
    "FromEmail": "test@test.com"
  },
  "AppURL": "[LOCAL_HOST_PATH]"
}
